{% extends 'admin.html.twig' %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-10 col-12">
        <div class="info-box">
            <h2>{{ headline }}</h2>
            <br>
            <br>
            <table class="table">
                <thead>
                    <th></th>
                    <th>Post title</th>
                    <th>User</th>
                    <th>Date</th>
                    <th></th>
                </thead>
                <tbody>
                    {% for comment in comments %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>
                            <a href="{{ path('post_single', {'slug': comment.post.slug}) }}#comment-{{ comment.id }}">
                                {{ comment.post.title | excerpt(20, '...') }}
                            </a></td>
                        <td>{{ comment.user.name }}</td>
                        <td>{{ comment.dateCreated | date('d/m/Y') }}</td>
                        <td>
                            <a href="#" class="btn"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="d-inline-block navigation text-center">
                {{ knp_pagination_render(comments) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}