<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin{% endblock %} | Blog.com</title>
    {{ include('inc/link.html.twig') }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
    {% block stylesheets %}{% endblock %}
</head>

<body>
    <div class="wrapper">
        <div class="body">
            <div class="sidebar">
                <ul class="list-unstyled m-0">
                    <li>
                        <a href="#" class="sidebar-item"><i class="fas fa-home"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_posts') }}" class="{% if current == 'posts' %}active{% endif %} sidebar-item"><i
                                class="fas fa-font"></i> Posts</a>
                    </li>
                    <li>
                        <a href="{{ path('category_add') }}" class="{% if current == 'category' %}active{% endif %} sidebar-item"><i
                                class="fas fa-tag"></i> Categories</a>
                    </li>
                    <li>
                        <a href="{{ path('comments') }}" class="{% if current == 'comments' %}active{% endif %} sidebar-item"><i class="fas fa-comment"></i> Comments</a>
                    </li>
                    <li>
                        <a href="#" class="sidebar-item"><i class="fas fa-user"></i> Users</a>
                    </li>
                    <li>
                        <a href="#" class="sidebar-item"><i class="fas fa-sliders-h"></i> Settings</a>
                    </li>
                    <li>
                        <a href="{{ path('app_logout') }}" class="sidebar-item"><i class="fas fa-power-off"></i> Logout</a>
                    </li>
                </ul>
            </div>
            <div style="width: 100%">
                <div class="info-bar text-right">
                    <span>Hello, {{ app.user.name }}</span>
                </div>
                <div class="container-fluid" style="padding: 20px">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        <br><br>
    </div>

    {{ include('inc/footer.html.twig') }}

    </div>

    {{ include('inc/script.html.twig') }}
    {% block javascripts %}{% endblock %}
</body>

</html>