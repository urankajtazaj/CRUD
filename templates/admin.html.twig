                            <li><a href="#" class="sidebar-item"> Edit</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="sidebar-item"><i class="fas fa-user"></i> Users</a>
                    </li>
                    <li>
                        <a href="#" class="sidebar-item"><i class="fas fa-power-off"></i> Logout</a>
                    </li>
                </ul>
            </div>
            <div class="container-fluid" style="padding: 20px">
                <div class="row">
                    <div class="col-md-10 col-12">
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
        <br><br>
    </div>

    {{ include('inc/footer.html.twig') }}

    </div>

    {{ include('inc/script.html.twig') }}
