{% extends 'base.html.twig' %}


{% block body %}
    <div class="row">
        <div class="col-md-8 col-12">
            <div class="post">
                <br>
                <h2>{{ post.title }}</h2>
                <hr>
                <br>
                <p>{{ post.content | nl2br }}</p>
                <br>
                {% if is_granted('ROLE_ADMIN') %}
                    <hr>
                    <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-warning"><i class="fas fa-cog"></i> Edit</a>
                    <a href="#" data-id="{{ post.id }}" class="btn btn-danger btn-delete"><i class="fas fa-trash-alt"></i> Delete</a>
                {% endif %}  
                <br><br> 
            </div>
        </div>
        <div class="col-md-4 col-12">
            <div class="post">
                <h5><b>Latest Posts</b></h5>
                <hr>
                <ul class="list-unstyled">
                    {% for p in posts %}
                    <li class="mb-3">
                        <a href="#">
                            {{ p.title }} <br><small>&mdash; by <i>{{ p.user.username }}</i></small>
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}