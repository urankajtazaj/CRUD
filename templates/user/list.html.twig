{% extends 'admin.html.twig' %}


{% block body %}
<div class="row">
    <div class="col-md-12 col-12">
        <div class="info-box">
            <h2>All Users</h2>
            <div class="text-right">
                <a href="{{ path('register') }}" class="btn btn-blue"><i class="fas fa-plus"></i> Add New</a>
            </div>
            <br>
            <table class="table table-sm">
                <thead>
                    <th></th>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th></th>
                    {# <th>Date Created</th> #}
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <td style="width: 100px">{{ loop.index }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.name }}</td>
                        <td>
                            {% for role in user.roles %}
                                {{ role }}
                            {% endfor %}
                        </td>
                        <th class="text-right">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="#" class="btn"><i class="fas fa-cog"></i></a>
                            {% endif %}
                            <a href="#" class="btn"><i class="fas fa-trash-alt"></i></a>
                        </th>
                        {# <td>{{ user.dateCreated | date("d/m/Y") }}</td> #}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="d-inline-block navigation text-center">
                {{ knp_pagination_render(users) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}